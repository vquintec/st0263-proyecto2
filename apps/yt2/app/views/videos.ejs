<% if(!userInfo){ %>
<%    include headerNA %>
<% }else{ %>
<%    include header %>
<% } %>


<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="my-4"><%- title %><small></small></h1>

  <form action="<%- baseUrl %>videos/search" method="get">
    <div class="row">
      <input type="text" name="query" placeholder="Search..." class="col-lg-10 col-md-8 col-sm-6 form-control"/>
      <button class="col-lg-2 col-md-4 col-sm-6 btn btn-primary">Search</button>
    </div>
  </form>
  <br>

  <div class="row">
    <% videos.forEach(function (video) { %>
      <div class="col-lg-3 col-md-4 col-sm-6 portfolio-item">
        <div class="card h-100">
          <a href="#"><img class="card-img-top" src="http://placehold.it/700x400" alt=""></a>
          <div class="card-body">
            <h4 class="card-title"><a href="#"><%- video.title %></a></h4>
            <h6 class="card-subtitle mb-2 text-muted"><%- video.owner.username %></h6>
            <p class="card-text"><%- video.description %></p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
  <!-- /.row -->

  <!-- Pagination -->
  <ul class="pagination justify-content-center">
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Previous">
        <span aria-hidden="true">&laquo;</span>
        <span class="sr-only">Previous</span>
      </a>
    </li>
    <li class="page-item">
      <a class="page-link" href="#">1</a></li>
    <li class="page-item">
      <a class="page-link" href="#">2</a></li>
    <li class="page-item">
      <a class="page-link" href="#">3</a></li>
    <li class="page-item">
      <a class="page-link" href="#" aria-label="Next">
        <span aria-hidden="true">&raquo;</span>
        <span class="sr-only">Next</span>
      </a>
    </li>
  </ul>

</div>
<!-- /.container -->


<% include footer %>
